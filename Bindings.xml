<Bindings>
    <!-- 在“按键绑定”中创建一组 ADT 的快捷键 -->
    <!-- 仅在首条绑定声明 header，避免重复注册同一 Header（12.0 更严格） -->
    <Binding name="ADT_TOGGLE_HISTORY" header="ADT">
        ADT_ToggleHistory();
    </Binding>
    <Binding name="ADT_COPY_DECOR">
        ADT_CopyDecor();
    </Binding>
    <Binding name="ADT_PASTE_DECOR">
        ADT_PasteDecor();
    </Binding>
    <Binding name="ADT_CUT_DECOR">
        ADT_CutDecor();
    </Binding>
    
    <!-- 高级编辑：虚拟多选 -->
    <Binding name="ADT_ADV_TOGGLE">
        ADT_Adv_Toggle();
    </Binding>
    <Binding name="ADT_ADV_TOGGLE_HOVER">
        ADT_Adv_ToggleHovered();
    </Binding>
    <Binding name="ADT_ADV_CLEAR">
        ADT_Adv_ClearSelection();
    </Binding>
    <Binding name="ADT_ADV_ANCHOR_HOVER">
        ADT_Adv_SetAnchor_Hovered();
    </Binding>
    <Binding name="ADT_ADV_ANCHOR_SELECTED">
        ADT_Adv_SetAnchor_Selected();
    </Binding>
</Bindings>
